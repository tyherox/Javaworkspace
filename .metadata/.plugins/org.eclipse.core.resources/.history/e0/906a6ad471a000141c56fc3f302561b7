import java.util.ArrayList;


public class Computer {

	static ArrayList<JBoardT> temp = new ArrayList<JBoardT>();
	static ArrayList<JBoardT> cBoard = new ArrayList<JBoardT>();
	static int score = 0;
	static JBoardT place;
	
	public void test(JBoardT a, JBoardT b)
	{
		cBoard.add(a);
		Board.updateBoard(a);
		cBoard.add(b);
		Board.updateBoard(b);
	}
	public void startMove(ArrayList<JBoardT> board){
		
		System.out.println("at ai: " + cBoard.size());
		temp = board;
		for(int i = 0; i<temp.size();i++)
		{
			JBoardT t = temp.get(i);
			cBoard.add(t);
			System.out.println("at ai process: " + i);
			if(cBoard.size()>=3)
			{
				if(MainFrame.victory(cBoard)==false)
				{
					place = t;
					break;
				}
			}
			cBoard.remove(t);
		}
		
		Board.updateBoard(place);
		cBoard.add(place);
	}
	
	static int depth = 0;
	private int miniMax(){
		depth++;
		for(int i = 0; i<temp.size();i++)
		{
			JBoardT t = temp.get(i);
			cBoard.add(t);
		}
		return 10;
	}
	
	private int[] coordinate(){
		return null;
	}
}
