import java.util.ArrayList;


public class Computer {

	static ArrayList<JBoardT> temp = new ArrayList<JBoardT>();
	static ArrayList<JBoardT> cBoard = new ArrayList<JBoardT>();
	static ArrayList<JBoardT> pBoard = new ArrayList<JBoardT>();
	static int score = 0;
	static int ts = 0;
	static JBoardT place;
	static int p = 0;
	
	public static void test(JBoardT a, JBoardT b)
	{
		cBoard.add(a);
		Board.updateBoard(a);
		cBoard.add(b);
		Board.updateBoard(b);
	}
	
	public static void updateAi(JBoardT a)
	{
		pBoard.add(a);
	}
	
	public void clear()
	{
		temp.clear();
		cBoard.clear();
	}
	public void startMove(ArrayList<JBoardT> board){
		
		System.out.println("at ai: " + board.size());
		temp = board;
		for(int i = 0; i<temp.size();i++)
		{
			JBoardT t = temp.get(i);
			temp.remove(i);
			cBoard.add(t);
			System.out.println("at ai process: " + i);
			System.out.println("i value" + t.getXC() + ", " + t.getYC());
			if(cBoard.size()>=3)
			{
				if(MainFrame.victory(cBoard)==true)
				{
					System.out.println("preVictory"+ t.getXC() + ", " + t.getYC());
					place = t;
					break;
				}
			}
			aiTurn=false;
			ts = miniMax();
			System.out.println("score for minimax" + ts);
			System.out.println(" ");
			System.out.println(" ");
			if(score<ts){
				System.out.println("changed score");
				System.out.println(" ");
				score = ts;
				place = t;
			}
			temp.add(t);
			cBoard.remove(t);
		}
		System.out.println(4);
		System.out.println("i value" + place.getXC() + ", " + place.getYC());
		Board.updateBoard(place);
		cBoard.add(place);
	}
	
	////// miniMax/////
	
	static int depth = 0;
	boolean aiTurn = false;
	static int goal = 10000;
	int sa = 100000000;
	int za = 100000000;
	int sp = -100000000;
	int zp = -100000000;
	JBoardT pc;
	JBoardT ac; 
	
	private int miniMax(){
		
		System.out.println("at minimax");
		depth++;
		
		if(aiTurn==true)
		{
			for(int i = 0; i<temp.size();i++)
			{
				JBoardT t = temp.get(i);
				temp.remove(i);
				cBoard.add(t);
				System.out.println("at minimax processing: ai");
				
				if(MainFrame.victory(cBoard)==true)
				{
					System.out.println("at minimax processing: ai win " + depth);
					System.out.println("i value" + t.getXC() + ", " + t.getYC());
					temp.add(i,t);
					cBoard.remove(t);
					aiTurn=!aiTurn;
					depth--;
					return goal - depth;
				}
				else
				{
					System.out.println("at minimax processing: ai no win "  + depth);
					System.out.println("i value" + t.getXC() + ", " + t.getYC());
					aiTurn=!aiTurn;
					za = miniMax();
					if(za>sa)
					{
						sa=za;
					}
					temp.add(i,t);
					cBoard.remove(t);
				}
			}
			depth--;
			aiTurn=!aiTurn;
			return 0;
		}
		
		if(aiTurn==false)
		{
			for(int i = 0; i<temp.size();i++)
			{
				JBoardT t = temp.get(i);
				temp.remove(i);
				pBoard.add(t);
				System.out.println("at minimax processing: player");
				
				if(MainFrame.victory(pBoard)==true)
				{
					System.out.println("at minimax processing: player win " + depth);
					System.out.println("i value" + t.getXC() + ", " + t.getYC());
					temp.add(i,t);
					pBoard.remove(t);
					aiTurn=!aiTurn;
					depth--;
					return -goal + depth;
				}
				else
				{
					System.out.println("at minimax processing: player no win "  + depth);
					System.out.println("i value" + t.getXC() + ", " + t.getYC());
					aiTurn=!aiTurn;
					zp = miniMax();
					if(zp<sp)
					{
						sp=zp;
					}
					temp.add(i,t);
					pBoard.remove(t);
				}
			}
			depth--;
			aiTurn=!aiTurn;
			return 0;
		}
		
		depth--;
		aiTurn=!aiTurn;
		return 0;
	}
	
	/////////
	
	private int[] coordinate(){
		return null;
	}
}
